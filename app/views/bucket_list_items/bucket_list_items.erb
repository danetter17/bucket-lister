h3>Welcome, <%= current_user(session).username %></h3>

<h3>Your personal bucket list:</h3>
<% @user.bucket_list_items.all.each do |bucket_list_item| %>
  <p><%= bucket_list_item.content %> <a href="/bucket_list_items/<%= bucket_list_item.id %>">View Item</a></p>
<% end %>

<h3>The Community bucket list: </h3>
<% BucketListItem.all.each do |bucket_list_item| %>
  <p><%= bucket_list_item.content %> <a href="/bucket_list_items/<%= bucket_list_item.id %>">View Item</a></p>
  <p> - <%= bucket_list_item.user.username %>
<% end %>

